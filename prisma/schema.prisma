generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  name       String
  email      String      @unique
  password   String
  dailyPlans DailyPlan[]
  streaks    Streak[]
  Food       Food[]
}

model Food {
  id          Int        @id @default(autoincrement())
  name        String
  calories    Int
  proteins    Int
  carbs       Int
  fats        Int
  dailyPlan   DailyPlan? @relation(fields: [dailyPlanId], references: [id])
  dailyPlanId Int?
  createdBy   User       @relation(fields: [userId], references: [id])
  userId      Int
  isPublic    Boolean    @default(false)
}

model DailyPlan {
  id            Int      @id @default(autoincrement())
  date          DateTime
  totalCalories Int      @default(0)
  totalProteins Int      @default(0)
  totalCarbs    Int      @default(0)
  totalFats     Int      @default(0)
  caloriesMax   Int
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
  foods         Food[]
}

model Streak {
  id      Int      @id @default(autoincrement())
  user    User     @relation(fields: [userId], references: [id])
  userId  Int      @unique
  count   Int      @default(0)
  lastDay DateTime
}
